@{
    Layout = null;
}
@using TermProject.Models

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Froosty Sweets Admin</title>
    <!-- Stylesheets -->
    <link type="text/css" href="~/Content/bootstrap2.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,400italic,700,700italic,500italic,500,300italic,300'
          rel='stylesheet' type='text/css'>
    <link type="text/css" href="~/Script/font-awesome.css" rel="stylesheet">
    <link type="text/css" href="~/Script/style.css" rel="stylesheet">
    <link type="text/css" href="~/Script/style3.css" rel="stylesheet">
    <link href="~/content/jquery.fancybox.css" rel="stylesheet" type="text/css" />
    <link type="text/css" href="~/content/style2.css" rel="stylesheet">
    <link type="text/css" href="~/Content/style.css" rel="stylesheet">
</head>
<body>

    <header class="header" id="jump">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                        <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img src="~/Content/themes/base/images/logo.gif" width="40" height="40" />
                    </a>
                </div>
                <div class="collapse navbar-collapse hidden-xs">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Add Ice Cream", "addIceCreams", "IceCreams")</li>
                        <li>@Html.ActionLink("Home", "Index", "Admin")</li>
                        <li>@Html.ActionLink("Users Info", "Users_Info", "Admin")</li>
                        <li>@Html.ActionLink("Orders", "getAllOrders", "Order")</li>
                        <li>@Html.ActionLink("Receipes", "Index", "Receipes")</li>
                        <li>@Html.ActionLink("Messages", "getAll", "Message")</li>
                        <li>@Html.ActionLink("Log Out", "Logout", "Admin")</li>
                    </ul>
                </div>


                <!-- /.navbar-responsive-collapse -->
            </div>
        </nav>
    </header>
    <div class="section type-2">
        <div class="container">
            <div>
                @foreach (IceCream i in Model)
                {
                    <div class="col-lg-3">
                        <div class="person media">
                            <h3 class="person-name" style="color:black">@i.brand</h3>



                            <div id="main-slider">
                                <div id="slider-holder">
                                    <ul>
                                        <li>
                                            <img src="@i.image" style="color:black" alt="slider image 1" class="avatar size-default img-circle" />
                                            
                                        </li>
                                        <li>
                                            <img src="@i.image1" style="color:black" alt="Slider Image 2" class="avatar size-default img-circle" />
                                            
                                        </li>
                                        <li>
                                            <img src="@i.image2" style="color:black" alt="Slider Image 1" class="avatar size-default img-circle" />
                                          
                                        </li>
                                    </ul>
                                </div>
                                
                            </div>
                           <!-- <div>
                                <img src="" class="avatar size-default img-circle">
                            </div> -->
                            <div class="media-body">
                                <p class="person-name" style="color:black">
                                    @i.name
                                </p>                              
                                <p class="person-brief muted" style="color:black">
                                    @i.Flavour
                                </p>                                
                                <p style="color:black">Rs @i.price/-</p>
                                <p style="color:black">@i.size ml</p>
                            </div>
                        </div>
                        <a href="/IceCreams/delete/?id=@i.IId" class="btn btn-danger btn-lg active" role="button" style=" float: right">Delete</a>
                    </div>                    
                  
                }

            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    Froosty Sweets

                </div>
            </div>
        </div>
    </footer>
            

            <!--Scripts-->
    <script src="js/jquery-1.6.2.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="js/jquery.jcarousel.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="js/jquery-func.js" type="text/javascript" charset="utf-8"></script>
            <script type="text/javascript" src="~/Script/jquery-1.10.2.min.js"></script>
            <script type="text/javascript" src="~/Script/bootstrap.min.js"></script>
            <script type="text/javascript" src="~/Script/jquery.smooth-scroll.min.js"></script>
            <script type="text/javascript" src="~/Script/jquery.mixitup.min.js"></script>
            <script src="~/Script/jquery.easing.1.3.js" type="text/javascript"></script>
            <script src="~/Script/modernizr.js" type="text/javascript"></script>
            <script src="~/content/jquery.fancybox.pack.js" type="text/javascript"></script>
            <script type="text/javascript" src="~/Script/custom.js"></script>
</body>
</html>

