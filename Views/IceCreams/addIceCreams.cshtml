@{
    Layout = null;
}
@using TermProject.Models

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Froosty Sweets Admin</title>
    <!-- Stylesheets -->
    <link type="text/css" href="~/Content/bootstrap2.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,400italic,700,700italic,500italic,500,300italic,300'
          rel='stylesheet' type='text/css'>
    <link type="text/css" href="~/Script/font-awesome.css" rel="stylesheet">
    <link type="text/css" href="~/Script/style.css" rel="stylesheet">
    <link type="text/css" href="~/Script/style3.css" rel="stylesheet">
    <link href="~/content/jquery.fancybox.css" rel="stylesheet" type="text/css" />
    <link type="text/css" href="~/content/style2.css" rel="stylesheet">
    <link type="text/css" href="~/Content/style.css" rel="stylesheet">
</head>
<body>

    <header class="header" id="jump">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                        <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img src="~/Content/themes/base/images/logo.gif" width="40" height="40" />
                    </a>
                </div>
                    <div class="collapse navbar-collapse hidden-xs">
                        <ul class="nav navbar-nav navbar-right">
                           
                            <li>@Html.ActionLink("Home", "Index", "Admin")</li>
                            <li>@Html.ActionLink("Ice Creams","Index","IceCreams")</li>
                            <li>@Html.ActionLink("Users Info", "Users_Info", "Admin")</li>
                            <li>@Html.ActionLink("Orders", "getAllOrders", "Order")</li>
                            <li>@Html.ActionLink("Receipes", "Index", "Receipes")</li>
                            <li>@Html.ActionLink("Messages", "getAll", "Message")</li>
                            <li>@Html.ActionLink("Log Out", "Logout", "Admin")</li>
                        </ul>
                    </div>
                </div>               <!-- /.navbar-responsive-collapse -->
            </div>
        </nav>
    </header>
    <div class="section type-1 section-contact">
        <div class="container">
            <div class="section-headlines">

                <h2>
                    Provide Folllowing Info
                </h2>
            </div>
            <div class="row">


            </div>
            <div class="col-lg-7 col-lg-offset-1">
                
@using (Html.BeginForm("add", "IceCreams", FormMethod.Post, new { style = "align:center", enctype = "multipart/form-data" }))
                                    {
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="name" name="name" placeholder="Name " required><br class="gap-15" />
                            </div>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="Flavour" name="Flavour" placeholder="Flavour Name" required><br class="gap-15" />
                            </div>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="brand" name="brand" placeholder="Brand  Name" required><br class="gap-15" />
                            </div>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="price" name="price" placeholder="Rs" required><br class="gap-15" />
                            </div>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="size" name="size" placeholder="ml size" required><br class="gap-15" />
                            </div>

                            <div class="col-lg-3">
                                <input type="file" style="color:black" name="image">
                            </div>
                            <div class="col-lg-3">
                                <input type="file" style="color:black" name="image1">
                            </div>
                            <div class="col-lg-3">
                                <input type="file" style="color:black" name="image2">
                            </div>
                            <div class="col-lg-3">
                                <input type="submit" value="Add" class="btn btn-block btn-success" onclick="status()">
                            </div>


                        </div>
                    </div>
}
                
            </div>
        </div>

    </div>




    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    Froosty Sweets

                </div>
            </div>
        </div>
    </footer>
    <!--Scripts-->
    <script type="text/javascript" src="~/Script/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/Script/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Script/jquery.smooth-scroll.min.js"></script>
    <script type="text/javascript" src="~/Script/jquery.mixitup.min.js"></script>
    <script src="~/Script/jquery.easing.1.3.js" type="text/javascript"></script>
    <script src="~/Script/modernizr.js" type="text/javascript"></script>
    <script src="~/content/jquery.fancybox.pack.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Script/custom.js"></script>




</body>
</html>

<script>
    function status() {
        var myJsVariable = '@ViewBag.Message';
        alert(myJsVariable);
    }
    </script>